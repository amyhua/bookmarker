<%= form_for [@folder, @link] do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
	</p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
	</p>
  <p>
    <%= f.label :notes %><br />
    <%= f.text_area :notes %>
	</p>
   <%= f.submit %>
<% end %>