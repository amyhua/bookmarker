<ul>
<% unless @links.nil? %>	
	<% @links.each do |link| %>
		<% folder = Folder.find(link.folder_id) %>
			<h3><div class='links' id='<%= link.title %>'>
				<a href="<%= link.url.to_s %>"><%= link.title %></a></h3>
				<ul>

					<li>
						<div class ='links-url'><%= link.url %></div>				
					</li>								

					<% unless link.notes.empty? %>
					<li>
						<div class='links-notes' id='<%= link.title %>'>
							<%= link.notes %>
						</div>
					</li>
					<% end %>
  				Filed under <%= folder.name %> | <%= link_to "Edit", [:edit, folder, link] %> | <%= link_to "Delete", [folder, link], :method => :delete, :confirm => "Are you sure you want to delete this link?" %>
					<br />
				</ul>
	<% end %>
<% end %>
</ul>