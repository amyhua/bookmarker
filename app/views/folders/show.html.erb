<h2><%= @folder.name %></h2>

<%= "Filed under... " + @folder.parentname.to_s %><br />

<%= link_to "Add a link", new_folder_link_path(@folder) %>
<%= link_to "Create Subfolder", new_folder_path(:parentname => @folder.name) %>
<%= link_to "Edit Folder", edit_folder_path %>
<%= link_to "Delete Folder", @folder, :method => :delete, :confirm => "Are you sure you want to delete this folder?"%>

<ul>
<% unless @links.nil? %>	
	<% @links.each do |link| %>
			<h3><div class='links' id='<%= link.title %>'>
				<a href="<%= link.url.to_s %>"><%= link.title %></a></h3>
				<ul>

					<li>
						<div class ='links-url'><%= link.url %></div>				
					</li>								

					<% unless link.notes.empty? %>
					<li>
						<div class='links-notes' id='<%= link.title %>'>
							<%= link.notes %>
						</div>
					</li>
					<% end %>
  				Filed under <%= Folder.find(link.folder_id).name %> | <%= link_to "Edit", [:edit, Folder.find(link.folder_id), link] %> | <%= link_to "Delete", :method => :delete, :confirm => "Are you sure you want to delete this link?" %>
					<br />
				</ul>
	<% end %>
<% end %>
</ul>